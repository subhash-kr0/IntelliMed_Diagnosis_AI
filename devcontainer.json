{
  "name": "Python 3.10.16 Env",
  "image": "mcr.microsoft.com/devcontainers/python:3.10.16",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10.16"
    }
  },
  "postCreateCommand": "python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt || true",
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": ".venv/bin/python"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
